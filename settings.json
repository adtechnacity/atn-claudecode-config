{
  "permissions": {
    "allow": [
      "Skill(audit-docs)",
      "Skill(audit-tests)",
      "Skill(commit)",
      "Skill(frontend-design:frontend-design)",
      "Skill(audit-comments)",
      "Skill(frontend-design)",
      "Skill(ship)",
      "Skill(ship:*)",
      "Skill(pr)",
      "Skill(review)",
      "Skill(deps)",
      "Skill(debug)",
      "Skill(cleanup)",
      "Skill(rollback)",
      "Skill(perf)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf .)",
      "Bash(> /dev/sda)",
      "Bash(mkfs:*)",
      "Bash(dd if=:*)",
      "Bash(chmod -R 777:*)",
      "Bash(curl*|*sh)",
      "Bash(wget*|*sh)"
    ]
  },
  "hooks": {
