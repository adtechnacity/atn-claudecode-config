    "command": "input=$(cat); cwd=$(echo \"$input\" | jq -r '.workspace.current_dir'); cd \"$cwd\" 2>/dev/null || true; git_status=''; git_branch=''; if git rev-parse --git-dir > /dev/null 2>&1; then branch=$(git symbolic-ref --short HEAD 2>/dev/null || git describe --tags --exact-match 2>/dev/null || git rev-parse --short HEAD 2>/dev/null); git_branch=\"(${branch}) \"; status=$(git -c core.useBuiltinFSMonitor=false status --porcelain 2>/dev/null); added=$(echo \"$status\" | grep -c '^A' || true); modified=$(echo \"$status\" | grep -c '^ M\\|^M' || true); deleted=$(echo \"$status\" | grep -c '^ D\\|^D' || true); renamed=$(echo \"$status\" | grep -c '^R' || true); untracked=$(echo \"$status\" | grep -c '^??' || true); [ $added -gt 0 ] && git_status=\"${git_status}$(printf '\\033[32m')+(${added})\"; [ $modified -gt 0 ] && git_status=\"${git_status}$(printf '\\033[35m')!(${modified})\"; [ $deleted -gt 0 ] && git_status=\"${git_status}$(printf '\\033[31m')-(${deleted})\"; [ $renamed -gt 0 ] && git_status=\"${git_status}$(printf '\\033[34m')>(${renamed})\"; [ $untracked -gt 0 ] && git_status=\"${git_status}$(printf '\\033[33m')?(${untracked})\"; [ -n \"$git_status\" ] && git_status=\"${git_status}$(printf '\\033[0m') \"; fi; printf \"${git_status}${git_branch}$(printf '\\033[32m')${cwd}$(printf '\\033[0m')\""
