          },
          {
            "type": "command",
            "command": "/Users/luis/Documents/Projects/.claude/hooks/validate-before-push.sh"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/luis/Documents/Projects/.claude/hooks/prevent-secrets-edit.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/luis/Documents/Projects/.claude/hooks/prevent-secrets-edit.sh"
